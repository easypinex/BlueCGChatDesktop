<Window x:Class="BlueChatDesktop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="背景顏色：" Foreground="Black" VerticalAlignment="Center" Margin="5"/>
                <xctk:ColorPicker Name="BackgroundColorPicker" SelectedColorChanged="BackgroundColorPicker_SelectedColorChanged" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="文字顏色：" Foreground="Black" VerticalAlignment="Center" Margin="5"/>
                <xctk:ColorPicker Name="TextColorPicker" SelectedColorChanged="TextColorPicker_SelectedColorChanged" Margin="5"/>
            </StackPanel>
            <Button Content="保存" Click="SaveButton_Click" Margin="10" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
